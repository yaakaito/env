{
    "image": "mcr.microsoft.com/devcontainers/base:1",
    "runArgs": ["--cap-add=SYS_ADMIN"],
    "initializeCommand": "mkdir -p ${localEnv:HOME}/.local/share/devcontainer/${devcontainerId} && touch ${localEnv:HOME}/.local/share/devcontainer/${devcontainerId}/.zsh_history",
    "postCreateCommand": ".devcontainer/setup.sh",
    "containerEnv": {
        "TZ": "Asia/Tokyo"
    },
    "features": {
        "ghcr.io/devcontainers/features/node:1": {},
        "ghcr.io/shyim/devcontainers-features/bun:0": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "customizations": {
        "vscode": {
            "settings": {
                "cline.chromeExecutablePath": "/usr/bin/chromium",
                "playwright.chromiumExecutablePath": "/usr/bin/chromium"
            },
            "extensions": [
                "github.vscode-github-actions",
                "streetsidesoftware.code-spell-checker",
            ]
        }
    },
    "mounts": ["source=${localEnv:HOME}/.local/share/devcontainer/${devcontainerId}/.zsh_history,target=/home/vscode/.zsh_history,type=bind"]
}
